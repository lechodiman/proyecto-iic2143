<div class="col-md-6 offset-md-3">

    <div class="edit-post-form">

        <h1>Edit post</h1>

        <%= simple_form_for @post, :html => { :multipart => true } do |f| %>
            <%= f.input :title, label: "Title" %>
            <%= f.input :content %>
            <%= f.button :submit %>
        <% end %>

    </div>

</div>
