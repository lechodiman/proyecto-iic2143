<div class="row align-items-center flex-column">
    <h1 class="display-1"><%= @restaurant.name %></h1>
    <h6> <%= link_to @restaurant.city.name, city_path(@restaurant.city) %> </h6>
    <div class="average-review-rating" data-score="<%= @average_review %>"></div> <small>based on <%= @restaurant.reviews.count %> reviews</small>
</div>

<div class="row">
    <p class="lead"><%= @restaurant.description %></p>
</div>


<div class="row justify-content-end mb-4">
    <div class="col-md-3">
        <% if has_favorite_item(@restaurant) %>
            <%= link_to unsave_restaurant_path(@restaurant), class: "btn btn-outline-success w-100", method: :put do  %>
                <i class="fas fa-star"></i> Remove
            <% end %>
        <% else %>
            <%= link_to save_restaurant_path(@restaurant), class: "btn btn-outline-success w-100", method: :put do  %>
                <i class="far fa-star"></i> Save
            <% end %>                        
        <% end %>            
    </div>
</div>

<div class="row">
    <div class="col-sm-12 justify-content-center">
        <div class="show-image">
            <%= image_tag @restaurant.image.url  , alt: @restaurant.name, class: "h-100 w-100" %>        
        </div>        
    </div>
</div>

<hr>

<%= render partial: "reviews/reviews", locals: {reviewable: @restaurant} %>

<%= render partial: "reviews/form", locals: {reviewable: @restaurant} %>


<script>
    $('.review-rating').raty({
        readOnly: true,
        score: function() {
            return $(this).attr('data-score');
        },
        path: '/assets/'
    });
</script>

<script>
    $('.average-review-rating').raty({
        readOnly: true,
        path: '/assets/',
        score: function() {
            return $(this).attr('data-score');
        }
    });
</script>


<script>
    $('#rating-form').raty({
        path: '/assets/',
        scoreName: 'review[rating]'
    });
</script>