<div class="col-md-4 mb-4">
    <div class="thumbnail">
        <%= link_to image_tag(city.image.thumb.url, alt: city.name, class: "img-fluid"), city_path(city) if city.image? %>
        <div class="caption">
            <h4><%= link_to city.name, city_path(city), class: "caption-link"%></h4>
        </div>
        <div class="thumbnail-buttons">

            <%= link_to save_city_path(city), method: :put, remote: true do  %>
                <% if has_favorite_item(city) %>
                    <p><i class="star-icon fas fa-star"></i></p>
                <% else %>
                    <p><i class="star-icon far fa-star"></i></p>
                <% end %>
            <% end %>                        

            <% if has_role?(:admin) %>                
                <%= link_to edit_city_path(city) do %>
                    <p><i class="fas fa-pencil-alt"></i></p>
                <% end %>
                
                <%= link_to city_path(city), method: :delete, data: { confirm: "Are you sure?" } do %>
                    <p><i class="fas fa-trash-alt"></i></p>
                <% end %>            
            <% end %>

        </div>            
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>