<div class="col-sm-4">
    <h5><%= city.name %></h5> 
    <%= link_to "See more", city_path(city), class: "btn btn-primary" %>
    <div class="btn-group">
        <%= link_to "Edit", edit_city_path(city), class: "btn btn-secondary" %>
        <%= link_to "Delete", city_path(city), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
</div>
