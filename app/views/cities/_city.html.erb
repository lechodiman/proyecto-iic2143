<div class="city">
    
    <div class="city-name">
        <p><%= city.name %></p>
    </div>

    <div>
        <%= link_to "See more", city_path(city)  %>
    </div>

    <div class="links btn-group">

        <%= link_to "Edit", edit_city_path(city), class: "btn btn-custom" %>
        <%= link_to "Delete", city_path(city), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-custom" %>

    </div>

    
</div>