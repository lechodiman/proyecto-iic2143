<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

  <ol class="carousel-indicators">

    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>

  </ol>

  <div class="carousel-inner">

    <div class="carousel-item active">
      <img src="<%= image_url('paris.jpg') %>" alt="paris" style="width:100%;" class="center">
	    <div class="carousel-caption">
	      <h1>Lupa</h1>
	      <h3>Be everywhere</h3>
	      <h3>Explore the most amazing cities of the world!</h3>
	    </div>
    </div>

    <div class="carousel-item">
      <img src="<%= image_url('central_park.jpg') %>" alt="central_park" style="width:100%;" class="center">
      <div class="carousel-caption">
        <h1>Citywalks</h1>
        <h3>Find with us the most spectacular landscapes</h3>
      </div>
    </div>

    <div class="carousel-item">
      <img src="<%= image_url('restaurant.jpg') %>" alt="restaurant" style="width:100%;" class="center">
      <div class="carousel-caption">
        <h1>Restaurants</h1>
        <h3>Eat in the perfect place for the perfect trip</h3>
      </div>
    </div>

    <div class="carousel-item">
      <img src="<%= image_url('hotel.jpg') %>" alt="hotel" style="width:100%;" class="center">
      <div class="carousel-caption">
        <h1>Hotels</h1>
        <h3>Search for the hotel of your dreams</h3>
      </div>
    </div>

    <div class="carousel-item">
      <img src="<%= image_url('tourists.jpg') %>" alt="tourists" style="width:100%;" class="center">
      <div class="carousel-caption">
        <h1>Come travel with us right now!</h1>
        <h3><%= link_to "Join us", countries_url %></h3>
      </div>
    </div>

  </div>

  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>

</div>