<%= simple_form_for @country, :html => { :multipart => true } do |f| %>
    <%= f.input :name, label: "Country Name" %>
    <%= f.input :description %>
    <%= f.input :image %>
    <% if @country.image? %>
        <%= image_tag @country.image.thumb.url, class:"d-block mx-auto" %>
    <% end %>
    <hr>
    <%= f.button :submit %>
<% end %>
